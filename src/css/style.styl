    transition 0.1s transform

.landcape-alert{
    width: 100vw;
    height:100vh;
    background: #000000;
    color: #ffffff;
    position: absolute;
    z-index: 100;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    transition: opacity 1s ease-in
    opacity 0
    display none
}
.landcape-alert svg{   
   width: 10%;
   margin-bottom: 5%;
   transition: transform 1s ease;
   transform: rotateZ(90deg)
   animation: rotate 4s 1s linear infinite;
}
@keyframes rotate{
    0%,10%{transform: rotateZ(90deg)}
    20%{transform: rotateZ(45deg)}
    30%,40%{transform: rotateZ(0deg)}
    50%{transform: rotateZ(45deg)}
    60%,100%{transform: rotateZ(90deg)}
    
}
.landcape-alert span{   
    color #FFF9EC
    font-family: 'Oswald', sans-serif;
    font-size: 1em;
    }


