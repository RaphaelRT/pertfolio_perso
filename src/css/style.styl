
html 
    overflow x hidden
    scroll-behavior: smooth;
    background: #181844;
     /* width */
::-webkit-scrollbar 
    width: 10px;
/* Track */
::-webkit-scrollbar-track {
  background: #FFF9EC; 
}
 
/* Handle */
::-webkit-scrollbar-thumb {
  background: #A09C93; 
}

/* Handle on hover */
::-webkit-scrollbar-thumb:hover {
  background: #555; 
  cursor pointer
}
