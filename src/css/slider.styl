.slider
{
   height 50%
}
.slides{
    background #000000
}

/**
 * Slides
 */
.slider .slides,
.slider .slide,
.slider 
{
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    overflow: hidden;
}
.content{
    position: absolute;
    top:20%
    left: 0;
    width: 100%;
    height: 100%;
    overflow: hidden;
    }

.slider .slide,
.slider .content
{
    transition: transform 0.6s cubic-bezier(0.75, 0, 0.25, 1);
    will-change: transform;
}

.slider .slide.is-before
{
    transform: translateX(-100%);
}
.slider .slide.is-before .content
{
    transform: translateX(50%);
}

.slider .slide.is-after
{
    transform: translateX(100%);
}
.slider .slide.is-after .content
{
    transform: translateX(-50%);
}

/**
 * Siblings
 */
.slider .sibling
{
    display: flex;
    position: absolute;
    top: 0;
    width: 60px;
    height: 100%;
    align-items: center;
    justify-content: center;
    background: #00000022;
    border: none;
    outline: none;
    cursor: pointer;
    opacity: 0;
    transition: opacity 0.3s;
    will-change: opacity;
}

.slider:hover .sibling
{
    opacity: 1;
}

.slider .sibling.previous
{
    left: 0;
}

.slider .sibling.next
{
    right: 0;
}

.slider .sibling::after
{
    content: '';
    display: block;
    width: 30px;
    height: 30px;
    border-top: 2px solid #ffffff;
    border-right: 2px solid #ffffff;
}

.slider .sibling.previous::after
{
    transform: translateX(6px) rotate(-135deg)
}

.slider .sibling.next::after
{
    transform: translateX(-6px) rotate(45deg)
}

/**
 * Pagination
 */
.slider .pagination
{
    display: flex;
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 80px;
    justify-content: center;
    align-items: flex-end;
    background: linear-gradient(to top, #00000088, #00000000);
}

.slider .pagination .page
{
    display: flex;
    width: 24px;
    height: 40px;
    padding: 0;
    justify-content: center;
    align-items: center;
    border: none;
    background: none;
    outline: none;
    cursor: pointer;
}

.slider .pagination .page::after
{
    content: '';
    display: block;
    width: 10px;
    height: 10px;
    border: 2px solid #ffffff;
}
.slider .pagination .page.is-active::after,
.slider .pagination .page:hover::after
{
  background: #ffffff;
}
